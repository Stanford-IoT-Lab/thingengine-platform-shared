extends layout

block page_name
  | Error

block content
  p Sorry that did not work
  if typeof message === 'string'
    p= message
  else if message.name === 'SyntaxError'
    p Syntax error at #{message.fileName} line #{message.lineNumber}: #{message.message}
  else if message.message
    p= message.message
  else
    p= String(message)
  a(href='javascript:history.back()').btn.btn-primary Go back
